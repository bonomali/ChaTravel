<%= stylesheet_link_tag "rooms", :media => "all" %>

<div class="container">
    <div class="row">

            <div class="row">
                <div class="col-md-3">

                    <p id="notice"><%= notice %></p>
                    <h1><%= link_to 'ChaTravel', rooms_path %></h1>

                    <p>
                      <strong>RoomName:</strong>
                      <%= @room.name %>
                    </p>

                    <p>メンバー</p>
                    <ul>
                      <li>UserName1:<!--<%= @user %> --></li>
                    　　<li>UserName2:<!--<%= @user %> --></li>
                    </ul>

                    <p>決めたことリスト</p>
                    <!--動的に階層構造。だれかお願い！ -->
                    <ul>
                      <li>食事:<!--<%= @voteresult %>  --></li>
                      <li>宿泊先:<!--<%= @voteresult %>  --></li>
                      <li>観光地:<!--<%= @voteresult %>  --></li>
                    </ul>
                </div>

                <div class="col-md-6">

                    <div name=message>
                      <textarea name="message" rows="1" cols="50">てきすと</textarea>
                      <input type="submit" value="投稿">
                    </div>

                </div>

                <div class="col-md-3">
                    <h1>ダッシュボード</h1>

                    <div>
                      <input type="submit" value="+ 候補を登録する">
                    </div>

                    <div name=suggest>
                      <textarea name="suggest" rows="10" cols="45">おすすめ</textarea>
                    </div>
                    <div>
                      <input type="submit" value="投票を開始する">
                    </div>

                    <%= link_to 'Edit', edit_room_path(@room) %> |


                </div>
            </div>
        </div>

    </div>
</div>











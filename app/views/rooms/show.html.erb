
<div class="container">

<div class="row">
  <div class="col-md-2" id="menubar">
    <div class="menulist">
      <h1><%= link_to 'ChaTravel', rooms_path %></h1>

      <p>
        <strong>RoomName:</strong>
        <%= @room.name %>
      </p>

      <p>メンバー</p>
      <div id="user_list">
        <ul>
          <% @users.each do |u| %>
              <li><%= u.name %></li>
          <% end %>
        </ul>
      </div>



      <p>決めたことリスト</p>
      <!--動的に階層構造。だれかお願い！ -->
      <ul>
        <li>食事:<!--<%= @voteresult %>  --></li>
        <li>宿泊先:<!--<%= @voteresult %>  --></li>
        <li>観光地:<!--<%= @voteresult %>  --></li>
      </ul>
    </div>
    <div class="chatra">
      <!--<img src="../assets/images/chatra_halfbraight.png" class="chatra">-->
      <%= image_tag 'chatra_halfbraight.png' %>
    </div>
  </div>

  <div class="col-md-7">
    <div class="chat">
      <%= render 'message_list', message_list: @messages, current_user: @user %>
      <div id="chat_area">
        <div id="message_textarea">
          <textarea id="comment"  name="comment" rows="1" cols="10">てきすと</textarea>
          <input id="post" type="submit" value="投稿">
        </div>
        <div id="current_user"  data-current_user_id="<%= @user.id %>"></div>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="dashboard">
      <h1>ダッシュボード</h1>
      <div>
        <input type="submit" value="+ 候補を登録する">
      </div>
      <div class=suggest>
        <textarea name="suggest" rows="10" cols="45">おすすめ</textarea>
      </div>
      <div>
        <input type="submit" value="投票を開始する">
      </div>
      <%= link_to 'Edit', edit_room_path(@room) %>
    </div>
  </div>
</div>
</div>

<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Enable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
    <% @room = room %>
      <tr>
        <td><%= room.name %></td>
        <td><%= room.enable %></td>
        <td><%= link_to 'Show', @room %></td>
        <td><%= link_to 'Edit', edit_room_path(@room) %></td>
        <td><%= link_to 'Destroy', @room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= render 'inout_form' if logged_in? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_room_path %>
